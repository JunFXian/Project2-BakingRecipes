<?xml version="1.0" encoding="utf-8"?>
<!--https://github.com/udacity/AdvancedAndroid_ClassicalMusicQuiz-->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:layoutDirection="ltr"
    android:background="@color/media_dark"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="@dimen/media_padding_top"
        android:orientation="horizontal">
        <ImageButton
            android:id="@+id/exo_prev"
            style="@style/ExoMediaButton.Previous"
            android:contentDescription="@string/exoplayer_button_image"/>
        <ImageButton
            android:id="@id/exo_rew"
            style="@style/ExoMediaButton.Rewind"
            android:contentDescription="@string/exoplayer_button_image"/>
        <ImageButton
            android:id="@id/exo_play"
            style="@style/ExoMediaButton.Play"
            android:contentDescription="@string/exoplayer_button_image"/>
        <ImageButton
            android:id="@id/exo_pause"
            style="@style/ExoMediaButton.Pause"
            android:contentDescription="@string/exoplayer_button_image"/>
        <ImageButton
            android:id="@id/exo_ffwd"
            style="@style/ExoMediaButton.FastForward"
            android:contentDescription="@string/exoplayer_button_image"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/media_padding_top"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView android:id="@id/exo_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/media_text_size"
            android:textStyle="bold"
            android:paddingStart="@dimen/media_padding_left"
            android:paddingEnd="@dimen/media_padding_right"
            android:includeFontPadding="false"
            android:textColor="@color/media_white"/>
        <SeekBar android:id="@id/exo_progress"
            android:layout_width="0dp"
            android:layout_weight="@integer/media_seek_bar_weight"
            android:layout_height="@dimen/media_seek_bar_height"
            android:focusable="false"
            style="?android:attr/progressBarStyleHorizontal"/>
        <TextView android:id="@id/exo_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/media_text_size"
            android:textStyle="bold"
            android:paddingStart="@dimen/media_padding_left"
            android:paddingEnd="@dimen/media_padding_right"
            android:includeFontPadding="false"
            android:textColor="@color/media_white"/>
    </LinearLayout>
</LinearLayout>