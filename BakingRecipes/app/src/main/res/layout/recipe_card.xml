<?xml version="1.0" encoding="utf-8"?>
<!--https://stackoverflow.com/questions/38127101/how-to-add-cardview-inside-of-gridview-->
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/recipe_card_height"
    android:id="@+id/recipe_card_view"
    android:layout_margin="@dimen/main_card_margin"
    card_view:cardBackgroundColor="@color/card_background_green"
    card_view:cardCornerRadius="@dimen/main_card_corner_radius"
    card_view:cardElevation="@dimen/main_card_elevation"
    card_view:contentPadding="@dimen/main_card_padding">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/green">
        <ImageView
            android:layout_width="@dimen/cardview_image_width"
            android:layout_height="match_parent"
            android:id="@+id/recipe_card_image"
            android:contentDescription="@string/cardview_image_description"
            android:layout_centerHorizontal="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:adjustViewBounds="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/recipe_card_text"
            android:textSize="@dimen/main_text_size"
            android:textColor="@android:color/black"
            tools:text="@string/fake_recipe_name"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true" />
    </RelativeLayout>
</android.support.v7.widget.CardView>